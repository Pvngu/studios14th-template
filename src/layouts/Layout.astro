---
import { getLocalizedPath } from "../lib/i18n";
import Header from "../components/shared/Header.astro";
import Footer from "../components/shared/Footer.astro";
import "../styles/global.css";

const currentLang = Astro.currentLocale || "en";

const rawPath = Astro.url.pathname.replace(/^\/(en|es)/, "") || "/";
const enHref = `https://studios14th.com${getLocalizedPath(rawPath, "en")}`;
const esHref = `https://studios14th.com${getLocalizedPath(rawPath, "es")}`;
const defaultHref = enHref;

const canonicalURL = new URL(Astro.url.pathname, "https://studios14th.com");

interface LayoutProps {
  title?: string;
  description?: string;
}

const { title = "Page", description = "" } = Astro.props as LayoutProps;
---

<!doctype html>
<html class="scroll-smooth" lang={currentLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Studios 14th</title>
    <meta name="description" content={description} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Gilda+Display&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />

    <link rel="alternate" hreflang="en" href={enHref} />
    <link rel="alternate" hreflang="es" href={esHref} />
    <link rel="alternate" hreflang="x-default" href={defaultHref} />
    <link rel="canonical" href={canonicalURL} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content="/og-image.jpg" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="studios14th.com" />
    <meta property="twitter:url" content="https://studios14th.com/" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/og-image.jpg" />

    <slot name="head" />
  </head>
  <body class="bg-background">
    <Header />
    <main class="pt-16 md:pt-25">
      <slot />
    </main>
    <Footer />
  </body>

  <script>
    import "../lib/animations.js";
  </script>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
