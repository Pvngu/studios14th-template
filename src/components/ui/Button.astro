---
import { cva, type VariantProps } from "class-variance-authority";
import { twMerge } from "tailwind-merge";
import { Icon } from "astro-icon/components";
import { getLocalizedPath } from "@lib/i18n";

const buttonStyles = cva(
  "inline-flex items-center justify-center whitespace-nowrap text-sm transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 font-inter cursor-pointer",
  {
    variants: {
      variant: {
        primary: "bg-primary text-white hover:bg-primary/90 rounded-sm w-fit",
        link: "bg-white text-black hover:bg-gray-200 rounded-sm gap-2 sm:gap-8 font-medium",
        nav: "text-text-main text-sm hover:text-primary no-underline hover:bg-surface-highlight/20 rounded-sm",
        outline:
          "border border-border/60 bg-transparent hover:bg-border/5 text-text-main rounded-sm",
      },
      size: {
        sm: "h-9 px-3",
        md: "h-10 p-6",
        lg: "h-14 px-5 text-sm md:text-base",
      },
    },
    defaultVariants: {
      variant: "primary",
      size: "md",
    },
  }
);

export interface Props extends VariantProps<typeof buttonStyles> {
  href?: string;
  class?: string;
  [key: string]: any;
}

const { href, variant, size, class: className, ...rest } = Astro.props;

const Tag = href ? "a" : "button";

const classes = twMerge(buttonStyles({ variant, size, className }));
const { currentLocale } = Astro;
const finalHref = href ? getLocalizedPath(href, currentLocale) : undefined;
---

<Tag class:list={classes} href={finalHref} {...rest}>
  <slot />
  {variant == "link" ? <Icon name="arrow-right" class="size-5" /> : null}
</Tag>
